<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.botecofx.ProdutoConsultaController">
    <children>
        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: orange; -fx-border-color: black;">
            <children>
                <TextField fx:id="tfFiltroPagamento" onKeyReleased="#onFiltro" prefHeight="25.0" prefWidth="621.0" promptText="Informe um filtro de busca" style="-fx-border-color: black;" />
                <Button mnemonicParsing="false" onAction="#onNovoPagamento" style="-fx-background-color: #2e4a29; -fx-border-color: black;" text="Novo" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font></Button>
                <Button mnemonicParsing="false" onAction="#onFecharPagamento" style="-fx-background-color: red; -fx-border-color: black;" text="X" textFill="#fff8f8">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="tabela" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: black;" VBox.vgrow="ALWAYS">
            <columns>
            <TableColumn fx:id="colIDPagamento" maxWidth="191.99996948242188" prefWidth="191.99996948242188" text="ID DO PAGAMENTO" />
                <TableColumn fx:id="colIDComanda" prefWidth="164.79998779296875" text="ID DA COMANDA" />
                <TableColumn fx:id="colValorPgto" prefWidth="216.0" text="VALOR DO PAGAMENTO" />
                <TableColumn fx:id="colIDTpPgto" maxWidth="354.4000244140625" prefWidth="245.60003662109375" text="ID DO TIPO DE PAGAMENTO" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAlterar" text="Alterar" />
                        <MenuItem mnemonicParsing="false" onAction="#onExcluir" text="Excluir" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </children>
</VBox>
